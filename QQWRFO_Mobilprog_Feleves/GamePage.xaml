<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:QQWRFO_Mobilprog_Feleves"
             x:Class="QQWRFO_Mobilprog_Feleves.GamePage"
             Title="GamePage">

    <ContentPage.BindingContext>
        <local:GameViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="10">

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Padding="0, 10, 0, 10">

                <Button Text="Válassz képet"
                        Command="{Binding PickImageCommand}"
                        Grid.Column="0" />

                <Button Text="Készíts képet"
                        Command="{Binding TakePhotoCommand}"
                        Grid.Column="1" />
            </Grid>

            <BoxView HeightRequest="1" Color="LightGray" />

            <Image Source="{Binding SelectedImage}" 
                   Aspect="AspectFit"
                   HeightRequest="200"
                   IsVisible="{Binding IsGameStarted, Converter={StaticResource InverseBooleanConverter}}" 
                   BackgroundColor="Transparent"
                   Margin="0, 10" />

            <BoxView HeightRequest="1" Color="LightGray" />

            <CollectionView x:Name="PuzzleBoard"
                            ItemsSource="{Binding PuzzlePieces}"
                            SelectionMode="None"
                            HorizontalOptions="Center"
                            VerticalOptions="CenterAndExpand">

                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" 
                                     Span="{Binding BoardSize}" 
                                     HorizontalItemSpacing="1"
                                     VerticalItemSpacing="1"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding ImageSource}"  
                               Aspect="AspectFill"
                               HeightRequest="120"  
                               WidthRequest="120"
                               Margin="1">

                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type local:GameViewModel}}, Path=PieceTappedCommand}"
                                                      CommandParameter="{Binding .}"/>
                            </Image.GestureRecognizers>
                        </Image>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <BoxView HeightRequest="1" Color="LightGray" />

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Padding="0, 10, 0, 0">

                <Button Text="Indítás" 
                        Command="{Binding StartGameCommand}" 
                        Grid.Column="0" />

                <Button Text="Eredeti kép" 
                        Command="{Binding ShowOriginalImageCommand}" 
                        Grid.Column="1" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>