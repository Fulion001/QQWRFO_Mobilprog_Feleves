<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:QQWRFO_Mobilprog_Feleves"
             x:Class="QQWRFO_Mobilprog_Feleves.MainPage"
             Title="Bejelentkezés">

    <ContentPage.BindingContext>
        <local:MainPageViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="CenterAndExpand">

            <Label Text="Tili-Toli Játék" FontSize="40" 
                   FontAttributes="Bold" HorizontalOptions="Center" 
                   Margin="0, 0, 0, 20"/>

            <Label Text="Felhasználónév" FontSize="18" FontAttributes="Bold"/>
            <Entry Placeholder="Írja be a felhasználónevet" 
                   Text="{Binding Username}" 
                   Keyboard="Text"/>

            <Label Text="Jelszó" FontSize="18" FontAttributes="Bold"/>
            <Entry Placeholder="Írja be a jelszót" 
                   Text="{Binding Password}" 
                   IsPassword="True" 
                   Keyboard="Text"/>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="20" Margin="0, 20, 0, 0">

                <Button Text="Bejelentkezés" 
                        Command="{Binding LoginCommand}"
                        Grid.Column="0" />

                <Button Text="Regisztráció" 
                        Command="{Binding RegisterCommand}"
                        BackgroundColor="Blue"
                        Grid.Column="1"/>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>